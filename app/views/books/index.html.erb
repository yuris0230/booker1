<h1>Books</h1>

<%# need table to show as column & rows %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
    <!---
        btn btn-{syntax..}
        primary = main blue
        secondary = sub grey
        success = confirmation/success green
        danger = danger/delete red
        warning = warning yellow
        info = info light blue
        light = white bg
        dark = black bg
    --->
        <%= link_to "Show", book_path(book), class: "btn btn-primary" %> |
        <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning" %> |
        <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "投稿を削除" }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with(model: @book, local: true) do |f| %>
  <div>
    <%= f.label :title, class: "form-controll" %><br>
    <%= f.text_field :title, class: "form-controll" %>
  </div>
    <%# demo use text_area %>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>

  <% if @book.errors.any? %>
    <div class="error_messages">
      <h2><%= @book.errors.count %> 件のエラーがあります:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
<% end %>
