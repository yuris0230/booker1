<h1>Books</h1>

<%# need table to show as column & rows %>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book) %> |
        <%= link_to "Edit", edit_book_path(book) %> |
        <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "投稿を削除" } %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with(model: @book, local: true) do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>

  <% if @book.errors.any? %>
    <div class="error_messages">
      <h2><%= @book.errors.count %> 件のエラーがあります:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
<% end %>
