<h1>編集ページ</h1>

<%= form_with(model: @book, local: true) do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>

<%= link_to "Back", books_path %>